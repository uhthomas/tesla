go_library(
    name = "tesla",
    srcs = [
        "client.go",
        "option.go",
    ],
    importpath = "github.com/uhthomas/tesla",
    visibility = ["//visibility:public"],
)

go_test(
    name = "tesla_test",
    srcs = [
        "client_test.go",
        "option_test.go",
    ],
    embed = [":tesla"],
)
